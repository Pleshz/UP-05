<Page x:Class="UP.Pages.TaskManage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Pages"
      Height="450" Width="800" MinHeight="450" MinWidth="800" Background="#f5f7fa" Title="TaskManage">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#ddd" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="*"/>
                    <!-- Контент -->
                    <RowDefinition Height="Auto"/>
                    <!-- Кнопки -->
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Управление задачей"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,15"
                           HorizontalAlignment="Center"
                           Grid.Row="0"/>

                <!-- Основное содержимое: форма + подзадачи -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <!-- Форма -->
                        <ColumnDefinition Width="3*"/>
                        <!-- Подзадачи -->
                    </Grid.ColumnDefinitions>

                    <!-- Форма задачи (слева) -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Название:"/>
                        <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Описание:"/>
                        <TextBox x:Name="DescriptionTextBox"
                                 Height="65"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="Колонка:"/>
                        <ComboBox x:Name="ColumnComboBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Ответственный:"/>
                        <ComboBox x:Name="UserComboBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Дедлайн:"/>
                        <DatePicker x:Name="DueDatePicker" Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Подзадачи (справа) -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Подзадачи" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                        <Border BorderBrush="#ddd" BorderThickness="1" CornerRadius="5" Background="#fafafa">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="250">
                                <ItemsControl x:Name="SubtasksItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5"
                                                    Padding="8" Margin="5" Background="White"
                                                    MouseLeftButtonUp="Subtask_Click" Cursor="Hand">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="12"
                                                               Foreground="Gray" TextWrapping="Wrap"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="Ответственный: " FontSize="11"/>
                                                        <TextBlock Text="{Binding AssignedUserId}" FontSize="11" Foreground="#007ACC"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Дедлайн: " FontSize="11"/>
                                                        <TextBlock Text="{Binding DueDate, StringFormat=d}" FontSize="11" Foreground="DarkRed"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        
                    </StackPanel>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="Добавить подзадачу"
                            Width="160" Height="35"
                            Margin="0,0,10,0"
                            Background="#007ACC"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="AddSubtask_Click"/>
                    <Button Content="Сохранить"
                            Width="120" Height="35"
                            Margin="0,0,10,0"
                            Background="#28a745"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Save_Click"/>
                    <Button Content="Отмена"
                            Width="120" Height="35"
                            Background="#555"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Cancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
