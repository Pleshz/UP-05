<Page x:Class="UP.Pages.TaskManage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Pages"
      Height="450" Width="800" MinHeight="450" MinWidth="800" Background="#f5f7fa" Title="TaskManage">

    <Grid Margin="20">
        <Border Background="White" Padding="30" CornerRadius="10" MaxWidth="700" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding Title}" Grid.ColumnSpan="2" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#222"/>

                <TextBlock Text="Имя задачи:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#555" />
                <TextBox x:Name="TaskNameTextBox" Grid.Row="1" Grid.Column="1" Height="30" Margin="0,5" FontSize="16" />

                <TextBlock Text="Описание:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#555" />
                <TextBox x:Name="DescriptionTextBox" Grid.Row="2" Grid.Column="1" Height="80" Margin="0,5" FontSize="16" TextWrapping="Wrap" AcceptsReturn="True"/>

                <TextBlock Text="Дата выполнения:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#555" />
                <DatePicker x:Name="DueDatePicker" Grid.Row="3" Grid.Column="1" Margin="0,5" FontSize="16"/>

                <TextBlock Text="Статус:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#555" />
                <ComboBox x:Name="StatusComboBox" Grid.Row="4" Grid.Column="1" Margin="0,5" FontSize="16">
                </ComboBox>

                <TextBlock Text="Ответственный:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#555" />
                <ComboBox x:Name="ResponsibleComboBox" Grid.Row="5" Grid.Column="1" Margin="0,5" FontSize="16">
                </ComboBox>

                <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Отмена" Width="100" Height="30" Margin="0,0,10,0" FontSize="16" />
                    <Button Content="Сохранить" Width="100" Height="30" Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
