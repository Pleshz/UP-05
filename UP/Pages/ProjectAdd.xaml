<Page x:Class="UP.Pages.ProjectAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Pages"
      mc:Ignorable="d" 
      Height="450" Width="800" MinHeight="450" MinWidth="800" Title="ProjectAdd">

    <Grid Background="#f5f7fa" Margin="20">
        <Border Background="White" Padding="30" CornerRadius="10"  HorizontalAlignment="Stretch" VerticalAlignment="Top" MaxWidth="700">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Создание проекта" Grid.ColumnSpan="2" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#222" />

                <TextBlock Text="Название:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#555" />
                <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Height="30" Margin="0,5" FontSize="16" />

                <TextBlock Text="Описание:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#555" />
                <TextBox x:Name="DescriptionTextBox" Grid.Row="2" Grid.Column="1" Height="90" Margin="0,5" FontSize="16" TextWrapping="Wrap" AcceptsReturn="True"/>

                <CheckBox x:Name="IsPublicCheckBox" Content="Публичный" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10,0,10" FontSize="16" />

                <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Button Click="goBack" Content="Отмена" Width="100" Height="40" Margin="0,0,10,0" FontSize="16" />
                    <Button Click="Save" Content="Сохранить" Width="100" Height="40" Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
