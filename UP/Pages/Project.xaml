<Page x:Class="UP.Pages.Project"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Elements"
      mc:Ignorable="d" 
      Height="450" Width="800" MinHeight="450" MinWidth="800" Title="Project" Background="#f5f7fa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="0">
            <Button Content="Участники" Width="140" Height="35" Margin="0,0,10,0"
                    Background="#FF9800" Foreground="White" FontWeight="Bold" Cursor="Hand"
                    Click="OpenMembers"/>
            <Button x:Name="AddTaskButton" Content="Добавить задачу" Width="140" Height="35" Margin="0,0,10,0"
                    Background="#28a745" Foreground="White" FontWeight="Bold" Cursor="Hand"
                    Click="AddTask"/>
            <Button x:Name="AddColumnButton" Content="Добавить колонку" Width="140" Height="35" Margin="0,0,10,0"
                    Background="#007ACC" Foreground="White" FontWeight="Bold" Cursor="Hand"
                    Click="AddColumn"/>
            <Button Content="Вернуться в профиль" Width="160" Height="35"
                    Background="#555" Foreground="White" FontWeight="Bold" Cursor="Hand"
                    Click="BackToProfile"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled"
                      Background="Transparent">
            <ItemsControl x:Name="ColumnsItemsControl"
                          ItemsSource="{Binding Columns}"
                          Margin="0,0,0,10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:ColumnItem/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
