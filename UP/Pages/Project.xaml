<Page x:Class="UP.Pages.Project"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Pages"
      mc:Ignorable="d" 
      Height="450" Width="800" MinHeight="450" MinWidth="800" Title="Project" Background="#f5f7fa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="0" >
            <Button Content="Добавить задачу" Width="120" Height="30" Margin="0,0,10,0" Background="#28a745" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
            <Button Content="Добавить колонку" Width="120" Height="30" Background="#007ACC" Foreground="White" FontWeight="Bold" Cursor="Hand" Margin="0,0,20,0"/>
            <Button Content="Вернуться в профиль" Width="140" Height="30" Background="#555" Foreground="White" Cursor="Hand" FontWeight="Bold"/>
        </StackPanel>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Grid.Row="1" Background="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch" >
                <Border Background="White" Width="180" Margin="10" Padding="10" CornerRadius="8" >
                    <StackPanel>
                        <TextBlock Text="Создано" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                        <ScrollViewer Height="320" VerticalScrollBarVisibility="Auto" Background="#fafafa" Padding="5">
                            <StackPanel x:Name="ToDoTasksPanel" AllowDrop="True"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <Border Background="White" Width="180" Margin="10" Padding="10" CornerRadius="8" >
                    <StackPanel>
                        <TextBlock Text="В процессе" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                        <ScrollViewer Height="320" VerticalScrollBarVisibility="Auto" Background="#fafafa" Padding="5">
                            <StackPanel x:Name="InProgressTasksPanel" AllowDrop="True"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <Border Background="White" Width="180" Margin="10" Padding="10" CornerRadius="8" >
                    <StackPanel>
                        <TextBlock Text="На проверке" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                        <ScrollViewer Height="320" VerticalScrollBarVisibility="Auto" Background="#fafafa" Padding="5">
                            <StackPanel x:Name="ReviewTasksPanel" AllowDrop="True"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <Border Background="White" Width="180" Margin="10" Padding="10" CornerRadius="8" >
                    <StackPanel>
                        <TextBlock Text="Готово" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                        <ScrollViewer Height="320" VerticalScrollBarVisibility="Auto" Background="#fafafa" Padding="5">
                            <StackPanel x:Name="DoneTasksPanel" AllowDrop="True"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
