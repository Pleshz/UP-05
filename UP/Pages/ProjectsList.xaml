<Page x:Class="UP.Pages.ProjectsList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Elements"
      Height="450" Width="800" MinHeight="450" MinWidth="800" Title="ProjectsList">

    <Grid Margin="20">
        <Border Background="White" Padding="20" CornerRadius="10" VerticalAlignment="Stretch" Height="Auto">
            <DockPanel LastChildFill="True">
                <Button Content="Создать проект" Width="160" Height="35" DockPanel.Dock="Top" Margin="0,0,0,10" Background="#28a745" Foreground="White" FontWeight="Bold" />

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ProjectsItemsControl" >
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:ProjectItem/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Page>
