<UserControl x:Class="UP.Elements.ColumnItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UP.Elements"
             Height="Auto" Width="200" Margin="10"
             AllowDrop="True"
             DragOver="TasksPanel_DragOver"
             Drop="TasksPanel_Drop">

    <Border BorderBrush="#ddd" BorderThickness="1" CornerRadius="5" Background="White" Padding="10">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ItemsControl x:Name="TasksItemsControl"
                          ItemsSource="{Binding Tasks}"
                          AllowDrop="True"
                          PreviewDragOver="TasksPanel_DragOver"
                          Drop="TasksPanel_Drop">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:TaskItem />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
