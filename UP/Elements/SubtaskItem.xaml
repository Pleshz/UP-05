<UserControl x:Class="UP.Elements.SubtaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UP.Elements"
             Height="Auto" Width="Auto">
    <Border Background="#f0f0f0" BorderBrush="#bbb" BorderThickness="1" CornerRadius="3" Padding="5"
            MouseLeftButtonUp="Border_MouseLeftButtonUp">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="11" Foreground="#555"/>
        </StackPanel>
    </Border>
</UserControl>
